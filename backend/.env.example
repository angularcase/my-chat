# Server
PORT=3300

# Database (use port 5433 to avoid conflict with other local PostgreSQL)
DATABASE_URL="postgresql://mychat:mychat@localhost:5433/mychat?schema=public"

# Redis (use port 6380 to avoid conflict with other local Redis)
REDIS_URL=redis://localhost:6380

# JWT
JWT_ACCESS_SECRET=your-access-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS / Widget (comma-separated origins for admin; widget uses allowedDomains per ChatSpace)
CORS_ORIGINS=http://localhost:5200,http://localhost:4200
